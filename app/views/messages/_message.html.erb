<div class="message">
  <div class="upper-message">
    <div class="chat-main-username">
      <%= message.user.name %>

    </div>
    <div class="chat-main-date">
      <%= l message.created_at %>

    </div>
  </div>
  <div class="chat-main-low">
    <div class="chat-main-comment">
      <%= message.content %>
    </div>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
  </div>
</div>

  </div>
</div>