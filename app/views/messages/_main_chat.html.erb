<div class="chat-header">
  <div class="chat-header-left">
    <div class="chat-name">
      hogefuga
    </div>
  </div>
  <div class="chat-header-right">
    <div class="chat-leave">
    <a href="#">チャットを退室する</a>
    </div>
  </div>
</div>

<div class="chat-main">
  <div class="chat-main-massage">
   <div class="chat-main-post">
     <div class="chat-main-username">
       Tom
     </div>
     <div class="chat-main-date">
      2020/3/31(Wed) 12:43:30
    </div>
  </div>
  <div class="chat-main-low">
    <div class="chat-main-comment">
      おはよう
    </div>
   </div>
  </div>
</div>


<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>